{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"quoteStyle": "double",
		"jsxQuoteStyle": "double"
	},
	"files": {
		"ignore": [
			"node_modules",
			".next",
			".next/**",
			"**/.next/**",
			"coverage",
			"dist",
			"build",
			"out"
		],
		"maxSize": 6291456
	}
}
